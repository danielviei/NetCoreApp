@model AdminNamespace.Models.EditUserModel

<div class="w-full flex flex-col items-center justify-center">
    <form method="post" enctype="multipart/form-data" class="registration-form w-full flex justify-center items-center h-[80vh]">
        <div class="w-9/12 bg-gray-200 p-4">
            <div class="flex gap-4 items-center justify-center w-full mb-4">
                <a href="@Url.Action("Index", "Admin")">
                    <svg
                        width="27"
                        height="27"
                        viewBox="0 0 27 27"
                        fill="none"
                        xmlns="http://www.w3.org/2000/svg"
                    >
                        <path d="M5.90625 12.6562H22.7812C23.005 12.6562 23.2196 12.7451 23.3779 12.9034C23.5361 13.0616 23.625 13.2762 23.625 13.5C23.625 13.7238 23.5361 13.9384 23.3779 14.0966C23.2196 14.2549 23.005 14.3438 22.7812 14.3438H5.90625C5.68247 14.3438 5.46786 14.2549 5.30963 14.0966C5.1514 13.9384 5.0625 13.7238 5.0625 13.5C5.0625 13.2762 5.1514 13.0616 5.30963 12.9034C5.46786 12.7451 5.68247 12.6562 5.90625 12.6562Z" fill="#52525C"/>
                        <path d="M6.25561 13.5L13.2537 20.4964C13.4121 20.6548 13.5011 20.8697 13.5011 21.0937C13.5011 21.3178 13.4121 21.5327 13.2537 21.6911C13.0952 21.8496 12.8804 21.9386 12.6563 21.9386C12.4322 21.9386 12.2174 21.8496 12.0589 21.6911L4.46517 14.0974C4.38659 14.019 4.32425 13.9259 4.28172 13.8234C4.23918 13.7209 4.21729 13.611 4.21729 13.5C4.21729 13.389 4.23918 13.2791 4.28172 13.1766C4.32425 13.0741 4.38659 12.981 4.46517 12.9026L12.0589 5.30887C12.2174 5.15044 12.4322 5.06143 12.6563 5.06143C12.8804 5.06143 13.0952 5.15044 13.2537 5.30887C13.4121 5.46731 13.5011 5.68219 13.5011 5.90625C13.5011 6.13031 13.4121 6.34519 13.2537 6.50362L6.25561 13.5Z" fill="#52525C"/>
                    </svg>
                </a>
                <h2 class="text-2xl font-bold">Editar Usuario</h2>
            </div>
            <div class="flex flex-col items-center justify-center ">
                <p class="text-sm text-gray-500">Foto de Perfil</p>
                <div class="w-28 h-28 rounded-full bg-gray-300 overflow-hidden cursor-pointer mb-4 hover:bg-gray-400 focus:ring-2 focus:ring-blue-500 focus:ring-opacity-50 z-10">
                    <div class="flex items-center justify-center h-28 w-full hover:bg-gray-400 focus:ring-2 focus:ring-blue-500 focus:ring-opacity-50">
                        <label for="id_img" class="block w-full cursor-pointer rounded-full text-center ">
                            <input
                            asp-for="Image"
                            type="file"
                            name="Image"
                            id="id_img"
                            class="hidden"
                            accept="image/*"
                            aria-label="Upload image"
                            aria-describedby="img-upload-help-text"
                            onchange="previewImage(event)"
                        >
                            <img
                                id="preview"
                                src="@Model.ImagePath"
                                alt="Image preview"
                                class="w-full h-full rounded-full object-cover"
                                style="object-fit: cover; width: 100%; height: 100%;"
                            >
                            <span id="img-upload-help-text" class="text-sm text-gray-500" style="display: none;">Upload your profile image</span>
                        </label>
                    </div>
                </div>
            </div>
            <div class="flex mb-4 w-full">
                <div class="flex flex-col w-full">
                    <label for="Name" class="ml-4 block text-sm font-bold mb-2">Name</label>
                    <input id="Name" name="Name" value="@Model.Name" class="w-full shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" />
                </div>
            </div>
            <div class="flex mb-4 w-full">
                <div class="flex flex-col w-full">
                    <label for="Lastname" class="ml-4 block text-sm font-bold mb-2">Lastname</label>
                    <input id="Lastname" name="Lastname" value="@Model.Lastname" class="w-full shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" />
                </div>
            </div>
            <div class="flex mb-4 w-full">
                <div class="flex flex-col w-full">
                    <label for="Email" class="ml-4 block text-sm font-bold mb-2">Email</label>
                    <input id="Email" name="Email" value="@Model.Email" class="w-full shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" />
                </div>
            </div>
            <div class="flex mb-4 w-full">
                <div class="flex w-full gap-4 items-center">
                    <label for="IsStaff" class="ml-4 block text-sm font-bold mb-2">IsStaff</label>
                    <input type="checkbox" id="IsStaff" name="IsStaff" value="true" @(Model.IsStaff ? "checked" : "")  />
                </div>
                <div class="flex w-full gap-4 items-center">
                    <label for="IsBlocked" class="ml-4 block text-sm font-bold mb-2">IsBlocked</label>
                    <input type="checkbox" id="IsBlocked" name="IsBlocked" value="true" @(Model.IsBlocked ? "checked" : "")  />
                </div>
            </div>
            <input type="hidden" name="Id" value="@Model.Id" />
            <div class="flex justify-end">
                <input type="submit" value="Save" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" />
            </div>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        </div>
    </form>
</div>

@section Scripts {
    <script>
        function previewImage(event) {
            var reader = new FileReader();
            reader.onload = function(){
                var output = document.getElementById('preview');
                var help_text = document.getElementById('img-upload-help-text');
                output.src = reader.result;
                output.style.display = 'block';
                help_text.style.display = 'none';
            };
            reader.readAsDataURL(event.target.files[0]);
        }
    </script>
}