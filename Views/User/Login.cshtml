@using UserNamespace.Models;
@model LoginViewModel;
@{
    Layout = "_Layout";
}

<div class="w-full h-[80vh] flex flex-col items-center justify-center">
    <div class="w-full md:w-2/3 lg:w-1/3  bg-gray-200 flex flex-col items-center justify-center p-4">
        <h2 class="text-2xl font-bold my-4">Iniciar sesión</h2>
        <div class="w-full p-4">
            <form method="post" class="w-full flex justify-center">
                <input name="__RequestVerificationToken" type="hidden" value="@ViewData["__RequestVerificationToken"]" />
                <div class="w-full flex flex-col items-center justify-center">
                    <div class="flex mb-4 w-full">
                        <div class="flex flex-col w-full">
                            <label for="Email" class="ml-4 block text-sm font-bold mb-2">Email</label>
                            <input id="Email" name="Email" class="w-full shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" />
                        </div>
                    </div>
                    <div class="flex mb-4 w-full">
                        <div class="flex flex-col w-full">
                           <label for="Password" class="ml-4 block text-sm font-bold mb-2">Password</label>
                            <input id="Password" name="Password" type="password" class="w-full shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" />
                           @if (!String.IsNullOrEmpty(Model.EmailError))
                            {
                                <div class="text-red-500 text-xs mt-2">@Model.EmailError</div>
                            }
                        </div>
                    </div>
                    <a class="w-full pb-2" asp-controller="User" asp-action="ForgotPassword">Recuperar contraseña</a>
                    <a class="w-full pb-2" asp-controller="User" asp-action="Register">Registrarse</a>
                    <button type="submit" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline">Iniciar sesión</button>
                </div>
            </form>
        </div>
    </div>
</div>